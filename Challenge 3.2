# Define a class called Student to represent a student object
class Student:
    # Initialize the attributes for name, roll_number, and cgpa
    def __init__(self, name, roll_number, cgpa):
        self.name = name
        self.roll_number = roll_number
        self.cgpa = cgpa

    # Define a method to print the student details
    def __str__(self):
        return f"{self.name} ({self.roll_number}) has CGPA {self.cgpa}"

